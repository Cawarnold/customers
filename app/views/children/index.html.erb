<h1>Listing children</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Zip post code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.user %></td>
        <td><%= child.title %></td>
        <td><%= child.first_name %></td>
        <td><%= child.last_name %></td>
        <td><%= child.company %></td>
        <td><%= child.address1 %></td>
        <td><%= child.address2 %></td>
        <td><%= child.zip_post_code %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

